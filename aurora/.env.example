# Aurora Core Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/aurora_core
# For production (Render/Neon): 
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# API Configuration
PORT=8000
NODE_ENV=development

# Frontend Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api
# For production (Vercel):
# NEXT_PUBLIC_API_BASE_URL=https://your-backend.onrender.com/api

# External Services (Optional)
GEE_SERVICE_KEY_PATH=./service-account.json
API_KEY=your_api_key_here

# Service URLs (for microservice architecture)
FUSION_SERVICE_URL=http://localhost:4003
LIKELIHOOD_SERVICE_URL=http://localhost:4002
ERE_SERVICE_URL=http://localhost:4004

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info